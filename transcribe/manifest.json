{
  "name": "Transcribe",
  "short_name": "Transcribe",
  "description": "Transcribe audio with Groq Whisper and save to GitHub Gist",
  "start_url": "/transcribe/",
  "scope": "/transcribe/",
  "display": "standalone",
  "background_color": "#f5f5f7",
  "theme_color": "#f5f5f7",
  "icons": [
    { "src": "favicon.svg", "type": "image/svg+xml", "sizes": "any" },
    { "src": "icons/icon-192.png", "type": "image/png", "sizes": "192x192" },
    { "src": "icons/icon-512.png", "type": "image/png", "sizes": "512x512" }
  ],
  "share_target": {
    "action": "/transcribe/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*", ".m4a", ".mp3", ".wav", ".ogg", ".webm", ".flac", ".mp4"]
        }
      ]
    }
  }
}
